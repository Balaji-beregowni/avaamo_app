<!DOCTYPE html>
<html>
<head>
  <title>Users List</title>
   <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <%= stylesheet_link_tag 'user_list' %>
</head>
<body>
  <h1>Users List</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Download(csv)</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <button class="download-csv-btn" data-user-id="<%= user.id %>">Download</button>
            <span id="status_<%= user.id %>"></span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= javascript_include_tag 'user_list' %>
</body>
</html>